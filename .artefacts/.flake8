[flake8]
max-line-length = 88
extend-ignore = E203, W503
max-complexity = 10
select = C,E,F,W,B,B9
exclude =
    .git,
    __pycache__,
    build,
    dist,
    *.egg-info
per-file-ignores =
    __init__.py: F401,F403
    tests/*: S101,D100,D101,D102,D103
docstring-convention = google
import-order-style = google
application-import-names = llm_consortium
